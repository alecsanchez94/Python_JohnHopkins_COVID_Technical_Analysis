   "source": [
    "#Install libraries\n",
    "#This does not need to be ran every single time\n",
    "#If you have pandas and bs4 installed, go ahead and skip\n",
    "#Feel free to delete this cell after you've installed these packages\n",
    "\n",
    "!pip install pandas\n",
    "!pip install beautifulsoup4"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Import libraries and define the github url containing all the csv files\n",
    "\n",
    "import pandas as pd\n",
    "import requests\n",
    "import os\n",
    "from bs4 import BeautifulSoup\n",
    "from tqdm import tqdm\n",
    "\n",
    "github_url = \"https://github.com/CSSEGISandData/COVID-19/tree/master/csse_covid_19_data/csse_covid_19_daily_reports_us\""
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Using raw.githubusercontent.com, and the github_url above, gather all the links for raw data\n",
    "#Send the raw.githubusercontent links to an array, which we will use to gather data next\n",
    "\n",
    "reqs = requests.get(github_url)\n",
    "soup = BeautifulSoup(reqs.text, 'html.parser')\n",
    "soup\n",
    "\n",
    "csv_links = []\n",
    "\n",
    "for ele in soup.find_all('a'):\n",
    "    csv_link = str(ele.get('href'))\n",
    "    if csv_link.endswith('.csv'):\n",
    "        csv_links.append(\"{}{}\".format(\"https://raw.githubusercontent.com\", csv_link.replace('/blob', '')))\n",
    "        \n",
    "#Take a look at what one of these links looks like        \n",
    "csv_links[0]"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Iterating through the raw.githubuser array, and pd.read_csv, send all the data to a single dataframe\n",
    "#This might take some time, use TQDM to monitor the progress\n",
    "\n",
    "data = pd.DataFrame()\n",
    "with tqdm(total = len(csv_links)) as pbar:\n",
    "    for link in csv_links:\n",
    "        data = data.append(pd.read_csv(link))\n",
    "        pbar.update(1)\n",
    "        \n",
    "#View the data\n",
    "data"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "#Export to an excel file to take a look, its quite a bit of data\n",
    "from datetime import datetime\n",
    "\n",
    "dt_string = datetime.now().strftime(\"%d %b %Y\")\n",
    "\n",
    "directory = r\""\n",
    "filename = \"COVID US Data {}.xlsx\".format(dt_string)\n",
    "outpath = os.path.join(directory, filename)\n",
    "\n",
    "writer = pd.ExcelWriter(outpath, 'xlsxwriter')\n",
    "data.to_excel(writer, sheet_name=\"COVID-US-Data\", index=0)\n",
    "writer.save()\n",
    "\n",
    "print(\"Saved to {}\".format(outpath))"
   ]
  },
